<UserControl x:Class="WpfUI.View.Header.Select"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfUI.View.Header"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Height="46" BorderThickness="1" CornerRadius="2" Margin="5 0 0 0">

        <Button x:Name="OpenFile" BorderThickness="0" Click="OpenFile_Click">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/search-folder.png"/>
                    <TextBlock Text="Select Directory" FontSize="18" VerticalAlignment="Center" Margin="3 0 3 0"></TextBlock>
                </StackPanel>
            </Button.Content>
        </Button>
    </Border>
</UserControl>
